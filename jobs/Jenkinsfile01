@Library('shared-library-nilanjan') _

pipeline{
    agent{
        label "ec2-slave"
    }
    stages{
        stage("Get Sources"){
            steps{
                script{
                    build.gitCheckout("https://github.com/POC-Jenkins-Seed-Jobs/POC.Service.ordersapi.git")
                }
            }
        }
        stage("Install Node.Js"){
            steps{
                script{
                    build.installNodeJs()
                }
            }
        }
        stage("Install NPM"){
            steps{
                script{
                    build.installNpm()
                }
            }
        }
        stage("Build"){
            steps{
                script{
                    build.nodeJsBuild()
                }
            }
        }
        stage("Test"){
            steps{
                script{
                    build.nodeJsTest()
                }
            }
        }
        stage("Docker Build & Push"){
            steps{
                script{
                    build.dockerBuildAndPush("https://index.docker.io/v1/")
                }
            }
        }
        
    }
    
}